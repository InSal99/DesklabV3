<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>
            <!-- Shadow 1: positioned at bottom -->
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryOpacity10" />
                </shape>
            </item>
            <!-- Shadow 2: positioned at bottom -->
            <item android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryOpacity20" />
                </shape>
            </item>
            <!-- Main shape: covers from top, leaving space for shadow -->
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Shadow 1: positioned at bottom -->
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryOpacity10" />
                </shape>
            </item>
            <!-- Shadow 2: positioned at bottom -->
            <item android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryOpacity20" />
                </shape>
            </item>
            <!-- Main shape: covers from top, leaving space for shadow -->
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>