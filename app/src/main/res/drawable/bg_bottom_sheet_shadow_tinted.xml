<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>
            <!-- Shadow 1: offset y=-4, blur=8 -->
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryOpacity10" />
                    <corners android:topLeftRadius="@dimen/dimen_16dp"
                        android:topRightRadius="@dimen/dimen_16dp" />
                </shape>
            </item>
            <!-- Shadow 2: blur=2 -->
            <item android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryOpacity20" />
                    <corners android:topLeftRadius="@dimen/dimen_16dp"
                        android:topRightRadius="@dimen/dimen_16dp" />
                </shape>
            </item>
            <!-- Main shape -->
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorFFF" />
                    <corners android:topLeftRadius="@dimen/dimen_16dp"
                        android:topRightRadius="@dimen/dimen_16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Shadow 1: offset y=-4, blur=8 -->
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryOpacity10" />
                    <corners android:topLeftRadius="@dimen/dimen_16dp"
                        android:topRightRadius="@dimen/dimen_16dp" />
                </shape>
            </item>
            <!-- Shadow 2: blur=2 -->
            <item android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryOpacity20" />
                    <corners android:topLeftRadius="@dimen/dimen_16dp"
                        android:topRightRadius="@dimen/dimen_16dp" />
                </shape>
            </item>
            <!-- Main shape -->
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorFFF" />
                    <corners android:topLeftRadius="@dimen/dimen_16dp"
                        android:topRightRadius="@dimen/dimen_16dp" />
                    <stroke android:color="@color/colorNeutral30" android:width="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>