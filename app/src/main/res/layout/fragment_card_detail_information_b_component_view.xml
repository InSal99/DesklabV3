<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:background="?attr/colorBackgroundPrimary"
    tools:context=".core.component.CardDetailInformationBComponentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnLibCardDetailInformationBBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@drawable/ic_chevron_left"
                app:tint="?attr/colorForegroundSecondary" />

            <TextView
                android:id="@+id/tvLibraryTitle"
                style="?attr/d3SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:text="Card: Detail Information B"
                android:textColor="?attr/colorForegroundPrimary" />

        </LinearLayout>

        <com.edts.components.card.detail.CardDetailInfoB
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            app:cdibLeftSlotType="image"
            app:cdibLeftSlotSrc="@drawable/avatar_placeholder"
            app:cdibRightSlotSrc="@drawable/ic_chevron_right"
            app:cdibTitleText="Card Title"
            app:cdibDescText="Card Content Description"/>

        <com.edts.components.card.detail.CardDetailInfoB
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:cdibLeftSlotType="icon"
            app:cdibShowIndicator="true"
            app:cdibIndicatorColor="?attr/colorBackgroundAttentionIntense"
            app:cdibLeftSlotSrc="@drawable/ic_star"
            app:cdibLeftSlotBackgroundColor="?attr/colorForegroundWarningSubtle"
            app:cdibLeftSlotTint="?attr/colorBackgroundAttentionIntense"
            app:cdibTitleText="Card Title"
            app:cdibDescText="Card Content Description"
            app:cdibRightSlotSrc="@drawable/ic_chevron_right"/>

        <com.edts.components.card.detail.CardDetailInfoB
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:cdibLeftSlotSize="44dp"
            app:cdibLeftSlotType="image"
            app:cdibShowIndicator="false"
            app:cdibShowRightSlot="false"
            app:cdibShowLeftSlot="true"
            app:cdibShowDescription="false"
            app:cdibIndicatorColor="?attr/colorForegroundWarningIntense"
            app:cdibLeftSlotSrc="@drawable/ic_star"
            app:cdibLeftSlotBackgroundColor="?attr/colorBackgroundWarningIntense"
            app:cdibLeftSlotTint="?attr/colorForegroundUtilityUlangTahunIntense"
            app:cdibTitleText="Card Title"
            app:cdibDescText="Card Content Description" />

        <com.edts.components.card.detail.CardDetailInfoB
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:cdibLeftSlotType="icon"
            app:cdibShowIndicator="false"
            app:cdibShowRightSlot="false"
            app:cdibShowLeftSlot="false"
            app:cdibShowDescription="false"
            app:cdibIndicatorColor="?attr/colorForegroundWarningIntense"
            app:cdibLeftSlotSrc="@drawable/ic_star"
            app:cdibLeftSlotBackgroundColor="?attr/colorForegroundWarningSubtle"
            app:cdibLeftSlotTint="?attr/colorForegroundAccentPrimaryIntense"
            app:cdibTitleText="Card Title"
            app:cdibDescText="Card Content Description" />

    </LinearLayout>

</FrameLayout>