<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="44dp"
    android:layout_marginBottom="@dimen/margin_24dp"
    android:paddingHorizontal="@dimen/margin_16dp"
    android:background="?attr/colorBackgroundPrimary"
    android:paddingTop="@dimen/margin_16dp"
    android:paddingBottom="@dimen/margin_8dp"
    tools:context=".features.event.ui.success.SuccessDenyInvitationView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivIllustDenyInvitation"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Illustrasi"
            android:scaleType="centerCrop"
            android:src="@drawable/il_calendar"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitleDenyInvitation"
            style="?attr/d3SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Undangan Ditolak!"
            android:textColor="?attr/colorForegroundPrimary"
            app:layout_constraintEnd_toEndOf="@+id/tvDescDenyInvitation"
            app:layout_constraintStart_toStartOf="@+id/tvDescDenyInvitation"
            app:layout_constraintTop_toBottomOf="@+id/ivIllustDenyInvitation" />

        <TextView
            android:id="@+id/tvDescDenyInvitation"
            style="?attr/p1Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Kamu tetap bisa ikut event lainnya"
            android:textColor="?attr/colorForegroundPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleDenyInvitation" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.edts.components.button.Button
        android:id="@+id/cvPrimaryBtnDenyInvitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:text="Lihat Event Lainnya"
        app:layout_constraintBottom_toTopOf="@+id/cvSecondaryBtnDenyInvitation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:size="MD"
        app:type="PRIMARY" />

    <com.edts.components.button.Button
        android:id="@+id/cvSecondaryBtnDenyInvitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali Ke Beranda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:size="MD"
        app:type="SECONDARY" />

</androidx.constraintlayout.widget.ConstraintLayout>