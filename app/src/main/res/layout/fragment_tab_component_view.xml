<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    tools:context=".core.component.TabComponentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnLibTabBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@drawable/ic_chevron_left"
                app:tint="?attr/colorForegroundSecondary" />

            <TextView
                android:id="@+id/tvLibraryTitle"
                style="?attr/d3SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:text="Tab"
                android:textColor="?attr/colorForegroundPrimary" />

        </LinearLayout>

        <com.edts.components.tab.Tab
            android:id="@+id/tabTeamReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:clipToPadding="false"
            app:tabTexts="@array/team_report_tabs"
            app:initialSelectedPosition="0"
            app:layout_constraintTop_toBottomOf="@+id/ivBackBtnTeamReportActivity"
            app:layout_constraintStart_toStartOf="@+id/ivBackBtnTeamReportActivity"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.edts.components.tab.Tab
            android:id="@+id/tabEventList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:clipToPadding="false"
            app:tabTexts="@array/event_list_tabs"
            app:initialSelectedPosition="0"
            app:layout_constraintTop_toBottomOf="@+id/tvSectionTitleEventListDaftarRSVP"
            app:layout_constraintStart_toStartOf="@+id/tvSectionTitleEventListDaftarRSVP"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>
</FrameLayout>