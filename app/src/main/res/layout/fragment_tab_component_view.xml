<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundPrimary"
    android:clipChildren="false"
    tools:context=".core.component.TabComponentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnLibTabBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@drawable/ic_chevron_left"
                app:tint="?attr/colorForegroundSecondary" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvLibraryTitle"
                style="?attr/d3SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:text="Tab"
                android:textColor="?attr/colorForegroundPrimary" />

        </LinearLayout>

        <com.edts.components.tab.Tab
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            app:initialSelectedPosition="1">

            <com.edts.components.tab.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabItemBadgeText="3"
                app:tabItemShowBadge="true"
                app:tabItemState="active"
                app:tabItemText="Home" />

            <com.edts.components.tab.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabItemBadgeText="!"
                app:tabItemShowBadge="true"
                app:tabItemState="inactive"
                app:tabItemText="Profile" />

            <com.edts.components.tab.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabItemShowBadge="false"
                app:tabItemState="inactive"
                app:tabItemText="Settings" />
        </com.edts.components.tab.Tab>

    </LinearLayout>
</FrameLayout>