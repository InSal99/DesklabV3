<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundPrimaryTinted"
    tools:context=".features.leave.ui.EmployeeLeaveHistoryView">

    <com.edts.components.header.Header
        android:id="@+id/cvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rightButtonSrc="@drawable/kit_ic_star"
        app:sectionSubtitleText="Manage your account preferences"
        app:sectionTitleText="Detail Pengajuan"
        app:showLeftButton="true"
        app:showRightButton="false"
        app:showSectionSubtitle="false"
        app:showSectionTitle="true"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/kit_bg_bottom_sheet"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivWrapperUsername"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:scaleType="fitStart"
                android:src="@drawable/wrapper_username"
                app:layout_constraintDimensionRatio="328:56"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/ivWrapperSaldoCuti"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:scaleType="fitStart"
                android:src="@drawable/wrapper_saldo_cuti"
                app:layout_constraintDimensionRatio="328:44"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivWrapperUsername"/>


            <com.edts.components.status.badge.StatusBadge
                android:id="@+id/cvStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivWrapperSaldoCuti"
                app:statusBadgeText="Pengajuan Disetujui"
                app:statusBadgeType="approved"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/div1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                app:dividerColor="?attr/colorStrokeSubtle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvStatusBadge"/>

            <ImageView
                android:id="@+id/list_tipe_Cuti"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:scaleType="fitStart"
                android:src="@drawable/list_tipe_cuti"
                app:layout_constraintDimensionRatio="328:56"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div1"/>

            <ImageView
                android:id="@+id/list_tanggal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:scaleType="fitStart"
                android:src="@drawable/list_tanggal"
                app:layout_constraintDimensionRatio="328:56"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_tipe_Cuti"/>

            <ImageView
                android:id="@+id/list_waktu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:scaleType="fitStart"
                android:src="@drawable/list_waktu"
                app:layout_constraintDimensionRatio="328:56"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_tanggal"/>

            <ImageView
                android:id="@+id/list_pemberi_persetujuan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:scaleType="fitStart"
                android:src="@drawable/list_pemberi_persetujuan"
                app:layout_constraintDimensionRatio="328:56"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_waktu"/>

            <ImageView
                android:id="@+id/wrapper_list_row"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:scaleType="fitStart"
                android:src="@drawable/wrapper_list_row"
                app:layout_constraintDimensionRatio="328:56"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_pemberi_persetujuan"/>

            <ImageView
                android:id="@+id/wrapper_alasan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:scaleType="fitStart"
                android:src="@drawable/wrapper_alasan"
                app:layout_constraintDimensionRatio="328:86"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wrapper_list_row"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/div2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                app:dividerColor="?attr/colorStrokeSubtle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wrapper_alasan"/>

            <ImageView
                android:id="@+id/input_file_upload"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:scaleType="fitStart"
                android:src="@drawable/input_file_upload"
                app:layout_constraintDimensionRatio="328:64"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div2"/>

            <ImageView
                android:id="@+id/wrapper_delegasi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_24dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:scaleType="fitStart"
                android:src="@drawable/wrapper_delegasi"
                app:layout_constraintDimensionRatio="328:78"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_file_upload"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>