<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.event.ui.attendanceoffline.ScanQRAttendanceView">

    <ImageView
        android:id="@+id/ivBackgroundScanQRAttendance"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Background"
        android:src="@drawable/scan_qr"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/ivBackBtnScanQRAttendance"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="62dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:contentDescription="Back Button"
        android:src="@drawable/ic_chevron_left"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        android:textColor="?attr/colorForegroundPrimaryInverse"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        style="?attr/d3SemiBold"
        android:id="@+id/tvNavTitleScanQRAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:text="Kehadiran Offline"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="?attr/colorForegroundPrimaryInverse"
        app:layout_constraintTop_toTopOf="@+id/ivBackBtnScanQRAttendance"
        app:layout_constraintBottom_toBottomOf="@+id/ivBackBtnScanQRAttendance"
        app:layout_constraintStart_toEndOf="@+id/ivBackBtnScanQRAttendance"/>

    <ImageView
        android:id="@+id/ivFlashScanQRAttendance"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:contentDescription="Flash Button"
        android:src="@drawable/ic_flash"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:tint="?attr/colorForegroundPrimaryInverse"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>