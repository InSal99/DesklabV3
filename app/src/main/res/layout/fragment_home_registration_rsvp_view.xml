<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundPrimaryTinted"
    tools:context=".features.home.ui.HomeRegistrationRSVPView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapperHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.edts.components.card.multi.detail.CardLeftSlot
            android:id="@+id/cvUserAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:slotSrc="@drawable/avatar_placeholder"
            app:slotType="image"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvGreeting"
            style="?attr/l3Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Selamat Pagi,"
            android:textColor="?attr/colorForegroundSecondary"
            app:layout_constraintStart_toEndOf="@+id/cvUserAvatar"
            app:layout_constraintTop_toTopOf="@+id/cvUserAvatar"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvUsername"
            style="?attr/h1SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Aldi Kurniawan"
            android:textColor="?attr/colorForegroundPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/cvUserAvatar"
            app:layout_constraintStart_toEndOf="@+id/cvUserAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvGreeting"/>

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Notification Button"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_notification_bell"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorForegroundTertiary"/>

        <com.edts.components.badge.Badge
            android:id="@+id/cvNotificationBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="13dp"
            android:visibility="gone"
            app:badgeBackgroundTint="?attr/colorBackgroundAttentionIntense"
            app:badgeStrokeColor="?attr/colorStrokeSubtle"
            app:layout_constraintBottom_toBottomOf="@+id/ivNotification"
            app:layout_constraintStart_toStartOf="@+id/ivNotification"
            app:showText="false"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:contentDescription="Aktivitas"
        android:scaleType="centerCrop"
        android:src="@drawable/wrapper_card_activity"
        app:layout_constraintDimensionRatio="328:68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrapperHeader"/>

    <HorizontalScrollView
        android:id="@+id/scrollViewShortcuts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivShortcut"
                android:layout_width="328dp"
                android:layout_height="56dp"
                android:contentDescription="Shortcut"
                android:scaleType="centerCrop"
                android:src="@drawable/wrapper_shortcut"
                app:layout_constraintDimensionRatio="328:56"/>

            <ImageView
                android:id="@+id/ivCardLaporanTim"
                android:layout_width="144dp"
                android:layout_height="56dp"
                android:contentDescription="Card Laporan Tim"
                android:scaleType="centerCrop"
                android:src="@drawable/card_laporan_tim"
                app:layout_constraintDimensionRatio="144:56"/>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewShortcuts">

        <ImageView
            android:id="@+id/ivEmptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:clipToPadding="false"
            android:contentDescription="Empty State"
            android:scaleType="centerCrop"
            android:src="@drawable/empty_state"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="328:450"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvDivisiFilter"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSectionTitle"
            style="?attr/h2SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Kalender Minggu Ini"
            android:textColor="?attr/colorForegroundPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTextButton"
            style="?attr/l3Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Selengkapnya"
            android:textColor="?attr/colorForegroundAccentPrimaryIntense"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.edts.components.selection.DropdownFilter
            android:id="@+id/cvDivisiFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_16dp"
            app:dropdownFilterIcon="@drawable/ic_chevron_down"
            app:dropdownFilterLabel="Divisi"
            app:dropdownFilterShowBadge="false"
            app:dropdownFilterShowDesc="false"
            app:layout_constraintBottom_toTopOf="@+id/rvActivitiesGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSectionTitle"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12dp"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_12dp"
            android:paddingEnd="@dimen/margin_16dp"
            android:paddingBottom="@dimen/margin_16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/rvActivitiesGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cvDivisiFilter"
            app:layout_constraintTop_toBottomOf="@+id/tvSectionTitle"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvActivitiesGroup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/margin_20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvDivisiFilter"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>