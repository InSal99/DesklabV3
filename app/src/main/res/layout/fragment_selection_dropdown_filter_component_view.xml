<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="?attr/colorBackgroundPrimary"
    tools:context=".core.component.SelectionDropdownFilterComponentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnLibSelectionDropdownFilterBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@drawable/ic_chevron_left"
                app:tint="?attr/colorForegroundSecondary"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvLibraryTitle"
                style="?attr/d3SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:text="Selection: Dropdown Filter"
                android:textColor="?attr/colorForegroundPrimary"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="@dimen/margin_16dp"
                android:gravity="center"
                android:orientation="vertical">
                <com.edts.components.selection.DropdownFilter
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dropdownFilterBadgeText="1"
                    app:dropdownFilterDesc="Description"
                    app:dropdownFilterIcon="@drawable/ic_chevron_down"
                    app:dropdownFilterLabel="Label"
                    app:dropdownFilterShowBadge="true"/>

                <com.edts.components.selection.DropdownFilter
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:dropdownFilterBadgeText="1"
                    app:dropdownFilterIcon="@drawable/ic_chevron_down"
                    app:dropdownFilterLabel="Label"
                    app:dropdownFilterShowBadge="true"
                    app:dropdownFilterShowDesc="false"/>

                <com.edts.components.selection.DropdownFilter
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:dropdownFilterIcon="@drawable/ic_chevron_down"
                    app:dropdownFilterLabel="Label"
                    app:dropdownFilterShowBadge="false"
                    app:dropdownFilterShowDesc="false"/>

                <com.edts.components.selection.DropdownFilter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:dropdownFilterBadgeText="1"
                    app:dropdownFilterDesc="Description"
                    app:dropdownFilterIcon="@drawable/ic_chevron_down"
                    app:dropdownFilterLabel="Label"
                    app:dropdownFilterShowBadge="true"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>