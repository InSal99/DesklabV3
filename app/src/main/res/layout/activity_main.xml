<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerTeamReportActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="62dp"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:background="@drawable/bg_rectangle_shadow_tinted"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBackBtnTeamReportActivity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Notification Button"
            android:src="@drawable/ic_chevron_left"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:tint="?attr/colorForegroundSecondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="?attr/h1SemiBold"
            android:id="@+id/tvSectionTitleTeamReportActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Laporan Tim"
            android:textColor="?attr/colorForegroundPrimary"
            app:layout_constraintStart_toEndOf="@+id/ivBackBtnTeamReportActivity"
            app:layout_constraintTop_toTopOf="@+id/ivBackBtnTeamReportActivity"
            app:layout_constraintBottom_toBottomOf="@+id/ivBackBtnTeamReportActivity"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTabTeamReportActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_tab"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/ivBackBtnTeamReportActivity"
            app:layout_constraintStart_toStartOf="@+id/ivBackBtnTeamReportActivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerEventListDaftarRSVP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="56dp"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:background="@drawable/bg_rectangle_shadow_tinted"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="?attr/d3SemiBold"
            android:id="@+id/tvSectionTitleEventListDaftarRSVP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Event"
            android:textColor="?attr/colorForegroundPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTabEventListDaftarRSVP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_tab"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tvSectionTitleEventListDaftarRSVP"
            app:layout_constraintStart_toStartOf="@+id/tvSectionTitleEventListDaftarRSVP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerEventListDaftarRSVP"
        app:layout_constraintBottom_toTopOf="@+id/cvBottomNavigation" />

    <com.edts.components.bottom.navigation.BottomNavigation
        android:id="@+id/cvBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:itemCount="four"
        app:item1State="active"
        app:item1Icon="@drawable/ic_navigation"
        app:item1Text="Home"
        app:item1ShowBadge="false"
        app:item2State="inactive"
        app:item2Icon="@drawable/ic_user_people"
        app:item2Text="Karyawan"
        app:item2ShowBadge="false"
        app:item3State="inactive"
        app:item3Icon="@drawable/ic_notification_horn"
        app:item3Text="Event"
        app:item3ShowBadge="false"
        app:item4State="inactive"
        app:item4Icon="@drawable/ic_user_person"
        app:item4Text="Profil"
        app:item4ShowBadge="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>