<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/margin_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_32dp" >

            <ImageView
                android:id="@+id/btnLibFooterBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@drawable/placeholder"
                app:tint="?attr/colorForegroundSecondary" />

            <TextView
                android:id="@+id/tvLibraryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Footer"
                style="?attr/d3SemiBold"
                android:textColor="?attr/colorForegroundPrimary"
                android:layout_marginStart="@dimen/margin_12dp" />

        </LinearLayout>

        <com.edts.components.footer.Footer
            android:id="@+id/footerSimple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:footerType="CALL_TO_ACTION"
            app:primaryButtonText="Daftar Sekarang" />

        <com.edts.components.footer.Footer
            android:id="@+id/footerWithDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            app:footerType="CALL_TO_ACTION_DETAIL"
            app:footerTitle="Title"
            app:footerDescription="Description Here"
            app:primaryButtonText="Daftar Sekarang"/>

        <com.edts.components.footer.Footer
            android:id="@+id/footerDualButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            app:footerType="DUAL_BUTTON"
            app:primaryButtonText="Button Label"
            app:secondaryButtonText="Button Label"/>

        <com.edts.components.footer.Footer
            android:id="@+id/footerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            app:footerType="NO_ACTION"
            app:footerTitle="Tipe Presensi"
            app:footerDescription="Presensi Offline"
            app:statusBadgeText="Presensi Tercatat"
            app:statusBadgeType="approved" />

        <com.edts.components.infoboxfooter.InfoBoxFooter
            android:id="@+id/infoboxFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text="This is an information message"
            android:layout_marginTop="@dimen/margin_12dp"
            app:variant="information"
            app:showInfoBox="true"
            app:footerType="CALL_TO_ACTION_DETAIL"
            app:primaryButtonText="Register Now"
            app:primaryButtonEnabled="true"
            app:footerTitle="Welcome"
            app:footerDescription="Please complete your registration" />

    </LinearLayout>

</ScrollView>