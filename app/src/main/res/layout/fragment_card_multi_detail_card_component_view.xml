<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundPrimary"
    android:clipChildren="false"
    tools:context=".core.component.CardMultiDetailCardComponentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnLibCardMultiDetailCardBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@drawable/kit_ic_chevron_left"
                app:tint="?attr/colorForegroundSecondary"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvLibraryTitle"
                style="?attr/d3SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:text="Card: Multi Detail Card"
                android:textColor="?attr/colorForegroundPrimary"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="@dimen/margin_16dp"
                android:gravity="center"
                android:orientation="vertical">
                <com.edts.components.card.multi.detail.CardMultiDetail
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cmdInfo1Text="Cuti Tahunan"
                    app:cmdInfo2Text="3 Hari"
                    app:cmdLeftSlotBackgroundColor="?attr/colorBackgroundInfoSubtle"
                    app:cmdLeftSlotSrc="@drawable/ic_user_person"
                    app:cmdLeftSlotTint="?attr/colorForegroundInfoIntense"
                    app:cmdLeftSlotType="icon"
                    app:cmdRightSlotSrc="@drawable/kit_ic_chevron_right"
                    app:cmdRightSlotTint="?attr/colorForegroundAccentPrimaryIntense"
                    app:cmdShowInfo2="true"
                    app:cmdTitle="21 Jun - 23 Jun 2025"/>

                <com.edts.components.card.multi.detail.CardMultiDetail
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:cmdInfo1Text="Izin Sakit (Dengan Surat Dokter) kanckjnaskcnasnckaskcnkjasnkcnjkasnjcnasnkanckjasnckjnkasj"
                    app:cmdLeftSlotBackgroundColor="?attr/colorBackgroundSuccessSubtle"
                    app:cmdLeftSlotSrc="@drawable/ic_user_person"
                    app:cmdLeftSlotTint="?attr/colorForegroundSuccessIntense"
                    app:cmdLeftSlotType="icon"
                    app:cmdRightSlotSrc="@drawable/kit_ic_chevron_right"
                    app:cmdShowInfo2="true"
                    app:cmdInfo2Text="399 Hari"
                    app:cmdTitle="7  - 8 Jul 2025"/>

                <com.edts.components.card.multi.detail.CardMultiDetail
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:cmdInfo1Text="Cuti Tahunan"
                    app:cmdInfo2Text="3 Hari"
                    app:cmdLeftSlotSrc="@drawable/kit_im_avatar_placeholder"
                    app:cmdLeftSlotType="image"
                    app:cmdRightSlotSrc="@drawable/kit_ic_chevron_right"
                    app:cmdShowInfo2="true"
                    app:cmdTitle="21 Jun - 23 Jun 2025"/>

                <com.edts.components.card.multi.detail.CardMultiDetail
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:cmdInfo1Text="Cuti Tahunan"
                    app:cmdInfo2Text="3 Hari"
                    app:cmdLeftSlotSrc="@drawable/kit_im_avatar_placeholder"
                    app:cmdLeftSlotType="image"
                    app:cmdRightSlotSrc="@drawable/kit_ic_chevron_right"
                    app:cmdRightSlotTint="?attr/colorForegroundAccentPrimaryIntense"
                    app:cmdShowInfo2="true"
                    app:cmdShowRightSlot="false"
                    app:cmdTitle="21 Jun - 23 Jun 2025"/>

                <com.edts.components.card.multi.detail.CardMultiDetail
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:cmdInfo1Text="Cuti Tahunan"
                    app:cmdInfo2Text="3 Hari"
                    app:cmdLeftSlotUrl="https://career.ub.ac.id/wp-content/uploads/2024/09/EDTS.png"
                    app:cmdLeftSlotType="image"
                    app:cmdRightSlotSrc="@drawable/kit_ic_chevron_right"
                    app:cmdRightSlotTint="?attr/colorForegroundAccentPrimaryIntense"
                    app:cmdShowInfo2="true"
                    app:cmdShowRightSlot="false"
                    app:cmdTitle="21 Jun - 23 Jun 2025"/>

                <com.edts.components.card.multi.detail.CardMultiDetail
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:cmdInfo1Text="Cuti Tahunan ksdjcnkjdsncka"
                    app:cmdInfo2Text="3 Hari"
                    app:cmdLeftSlotSrc="@drawable/kit_im_avatar_placeholder"
                    app:cmdLeftSlotType="image"
                    app:cmdRightSlotSrc="@drawable/kit_ic_chevron_right"
                    app:cmdRightSlotTint="?attr/colorForegroundAccentPrimaryIntense"
                    app:cmdShowInfo2="true"
                    app:cmdShowLeftSlot="false"
                    app:cmdShowRightSlot="false"
                    app:cmdTitle="21 Jun - 23 Jun 2025"/>

                <com.edts.components.card.multi.detail.CardMultiDetail
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:cmdInfo1Text="Cuti Tahunan"
                    app:cmdInfo2Text="3 Hari"
                    app:cmdLeftSlotSrc="@drawable/kit_im_avatar_placeholder"
                    app:cmdLeftSlotType="image"
                    app:cmdRightSlotSrc="@drawable/kit_ic_chevron_right"
                    app:cmdRightSlotTint="?attr/colorForegroundAccentPrimaryIntense"
                    app:cmdShowInfo2="false"
                    app:cmdShowLeftSlot="false"
                    app:cmdShowRightSlot="false"
                    app:cmdTitle="21 Jun - 23 Jun 2025"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>