<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:background="?attr/colorBackgroundPrimary"
    tools:context=".core.component.BottomNavigationComponentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnLibBottomNavigationBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@drawable/ic_chevron_left"
                app:tint="?attr/colorForegroundSecondary"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvLibraryTitle"
                style="?attr/d3SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:text="Bottom Navigation"
                android:textColor="?attr/colorForegroundPrimary"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="@dimen/margin_16dp"
                android:orientation="vertical">
                <com.edts.components.bottom.navigation.BottomNavigation
                    android:id="@+id/cvBottomNavigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:itemCount="five"
                    app:item1State="active"
                    app:item1Icon="@drawable/ic_navigation"
                    app:item1Text="Home"
                    app:item1ShowBadge="false"
                    app:item2State="inactive"
                    app:item2Icon="@drawable/ic_user_people"
                    app:item2Text="Karyawan"
                    app:item2ShowBadge="false"
                    app:item3State="inactive"
                    app:item3Icon="@drawable/ic_notification_horn"
                    app:item3Text="Event"
                    app:item3ShowBadge="false"
                    app:item4State="inactive"
                    app:item4Icon="@drawable/ic_user_person"
                    app:item4Text="Profil"
                    app:item4ShowBadge="false"/>

                <com.edts.components.bottom.navigation.BottomNavigation
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24dp"
                    app:itemCount="four"
                    app:item1State="active"
                    app:item1Icon="@drawable/ic_navigation"
                    app:item1Text="Home"
                    app:item1ShowBadge="false"
                    app:item2State="inactive"
                    app:item2Icon="@drawable/ic_user_people"
                    app:item2Text="Karyawan"
                    app:item2ShowBadge="false"
                    app:item3State="inactive"
                    app:item3Icon="@drawable/ic_notification_horn"
                    app:item3Text="Event"
                    app:item3ShowBadge="false"
                    app:item4State="inactive"
                    app:item4Icon="@drawable/ic_user_person"
                    app:item4Text="Profil"
                    app:item4ShowBadge="false"/>

                <com.edts.components.bottom.navigation.BottomNavigation
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24dp"
                    app:itemCount="three"
                    app:item1State="active"
                    app:item1Icon="@drawable/ic_navigation"
                    app:item1Text="Home"
                    app:item1ShowBadge="false"
                    app:item2State="inactive"
                    app:item2Icon="@drawable/ic_user_people"
                    app:item2Text="Karyawan"
                    app:item2ShowBadge="false"
                    app:item3State="inactive"
                    app:item3Icon="@drawable/ic_notification_horn"
                    app:item3Text="Event"
                    app:item3ShowBadge="false"/>

                <com.edts.components.bottom.navigation.BottomNavigation
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24dp"
                    app:itemCount="two"
                    app:item1State="active"
                    app:item1Icon="@drawable/ic_navigation"
                    app:item1Text="Home"
                    app:item1ShowBadge="false"
                    app:item2State="inactive"
                    app:item2Icon="@drawable/ic_user_people"
                    app:item2Text="Karyawan"
                    app:item2ShowBadge="false"/>

                <com.edts.components.bottom.navigation.BottomNavigation
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24dp"
                    app:itemCount="one"
                    app:item1State="active"
                    app:item1Icon="@drawable/ic_navigation"
                    app:item1Text="Home"
                    app:item1ShowBadge="false"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>