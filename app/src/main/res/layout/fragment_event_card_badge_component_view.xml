<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundPrimary"
    android:clipChildren="false"
    tools:context=".core.component.EventCardBadgeComponentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnLibEventCardBadgeBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@drawable/ic_chevron_left"
                app:tint="?attr/colorForegroundSecondary" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvLibraryTitle"
                style="?attr/d3SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:text="Event Card: Badge"
                android:textColor="?attr/colorForegroundPrimary" />

        </LinearLayout>

        <com.edts.components.event.card.EventCardBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            app:eventBadgeType="invited"
            app:badgeSize="Large"
            app:eventCardBadgeText="Diundang"
            app:layout_constraintEnd_toEndOf="@+id/ivEventCard"
            app:layout_constraintTop_toTopOf="@+id/ivEventCard" />

        <com.edts.components.event.card.EventCardBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:eventBadgeType="registered"
            app:badgeSize="Large"
            app:eventCardBadgeText="Terdaftar"
            app:layout_constraintEnd_toEndOf="@+id/ivEventCard"
            app:layout_constraintTop_toTopOf="@+id/ivEventCard" />

        <com.edts.components.event.card.EventCardBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:eventBadgeType="live"
            app:badgeSize="Large"
            app:eventCardBadgeText="Berlangsung"
            app:layout_constraintEnd_toEndOf="@+id/ivEventCard"
            app:layout_constraintTop_toTopOf="@+id/ivEventCard" />

        <com.edts.components.event.card.EventCardBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:eventBadgeType="registered"
            app:badgeSize="Small"
            app:eventCardBadgeText="Terdaftar"
            app:layout_constraintEnd_toEndOf="@+id/ivEventCard"
            app:layout_constraintTop_toTopOf="@+id/ivEventCard" />

        <com.edts.components.event.card.EventCardBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:eventBadgeType="live"
            app:badgeSize="Small"
            app:eventCardBadgeText="Berlangsung"
            app:layout_constraintEnd_toEndOf="@+id/ivEventCard"
            app:layout_constraintTop_toTopOf="@+id/ivEventCard" />

        <com.edts.components.event.card.EventCardBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:eventBadgeType="attended"
            app:badgeSize="Small"
            app:eventCardBadgeText="Hadir"
            app:layout_constraintEnd_toEndOf="@+id/ivEventCard"
            app:layout_constraintTop_toTopOf="@+id/ivEventCard" />

        <com.edts.components.event.card.EventCardBadge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:eventBadgeType="notattended"
            app:badgeSize="Small"
            app:eventCardBadgeText="Tidak Hadir"
            app:layout_constraintEnd_toEndOf="@+id/ivEventCard"
            app:layout_constraintTop_toTopOf="@+id/ivEventCard" />

    </LinearLayout>

</FrameLayout>