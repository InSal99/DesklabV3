<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundPrimary"
    android:clipChildren="false"
    tools:context=".core.component.EventCardComponentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnLibEventCardBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@drawable/ic_chevron_left"
                app:tint="?attr/colorForegroundSecondary"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvLibraryTitle"
                style="?attr/d3SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:text="Event Card"
                android:textColor="?attr/colorForegroundPrimary"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <com.edts.components.event.card.EventCard
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24dp"
                    app:cardBadgeText="Berlangsung"
                    app:cardBadgeType="live"
                    app:cardEventCategory="People Development"
                    app:cardEventDate="23 Juli 2025"
                    app:cardEventTitle="EDTS Town-Hall 2025: Power of Change"
                    app:cardEventType="Hybrid Event"
                    app:cardStatusText="Terdaftar"
                    app:cardStatusType="registered"
                    app:eventImageSrc="@drawable/poster2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.edts.components.event.card.EventCard
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:showCardBadge="false"
                    app:cardEventCategory="People Development"
                    app:cardEventDate="23 Juli 2025"
                    app:eventImageSrc="@drawable/poster2"
                    app:eventImageUrl="https://career.ub.ac.id/wp-content/uploads/2024/09/EDTS.png"
                    app:cardEventTitle="EDTS Town-Hall 2025: Power of Change"
                    app:cardEventType="Hybrid Event"
                    app:showCardStatus="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>