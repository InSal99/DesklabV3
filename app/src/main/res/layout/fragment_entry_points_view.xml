            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibEventModalityLoading"
            app:layout_constraintTop_toTopOf="@id/btnLibEventModalityLoading"
            app:layout_constraintBottom_toBottomOf="@id/btnLibEventModalityLoading"
            app:layout_constraintEnd_toEndOf="parent"/>

