            android:text="Footer"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibButton"
            app:layout_constraintEnd_toStartOf="@id/btnLibToast"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibToast"
