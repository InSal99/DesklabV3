            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibEventModalityLoading"
            app:layout_constraintEnd_toEndOf="@id/btnLibEventModalityLoading"
            app:layout_constraintBottom_toBottomOf="parent"/>

