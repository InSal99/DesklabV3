            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibSelectionDropdownFilter"
            app:layout_constraintEnd_toEndOf="@id/btnLibSelectionDropdownFilter"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibCardDetailInformationB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Detail Info Card"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibCardMultiDetailCard"
            app:layout_constraintTop_toTopOf="@id/btnLibCardMultiDetailCard"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibCardLeftSlot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Card Left Slot"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibCardMultiDetailCard"
            app:layout_constraintEnd_toEndOf="@id/btnLibCardMultiDetailCard"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibBottomNavigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Navigation"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibCardLeftSlot"
