<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".core.EntryPointsView"
    android:background="?attr/colorBackgroundPrimary">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tvFlowTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#1A3754"
            app:cardCornerRadius="@dimen/margin_12dp"
            android:layout_marginTop="@dimen/margin_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="?attr/d3SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/margin_6dp"
                android:text="Desklab Prototype Flow"
                android:textColor="?attr/colorForegroundPrimaryInverse" />
        </com.google.android.material.card.MaterialCardView>

        <com.edts.components.button.Button
            android:id="@+id/btnFlow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            buttonCustomSize="LG"
            android:text="Registrasi Event - RSVP"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFlowTitle"/>

        <com.edts.components.button.Button
            android:id="@+id/btnFlow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            buttonCustomSize="LG"
            android:text="Invited Event - No RSVP"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlow1"/>

        <com.edts.components.button.Button
            android:id="@+id/btnFlow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            buttonCustomSize="LG"
            android:text="Attendance - Hybrid Event"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlow2"/>

        <com.edts.components.button.Button
            android:id="@+id/btnFlow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            buttonCustomSize="LG"
            android:text="Invited Event - Tolak Undangan"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlow3"/>

        <com.edts.components.button.Button
            android:id="@+id/btnFlow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            buttonCustomSize="LG"
            android:text="Cuti Feature Improvements"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlow4" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tvLibraryTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#1A3754"
            app:cardCornerRadius="@dimen/margin_12dp"
            android:layout_marginTop="@dimen/margin_42dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlow5">

            <TextView
                style="?attr/d3SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/margin_6dp"
                android:text="Desklab Component Library"
                android:textColor="?attr/colorForegroundPrimaryInverse" />
        </com.google.android.material.card.MaterialCardView>


        <com.edts.components.button.Button
            android:id="@+id/btnLibButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Button"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLibraryTitle"
            app:layout_constraintEnd_toStartOf="@id/btnLibInfobox"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibInfobox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Infobox"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibButton"
            app:layout_constraintTop_toTopOf="@id/btnLibButton"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
