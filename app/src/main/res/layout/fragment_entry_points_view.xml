            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibEventInvitationCard"
            app:layout_constraintTop_toTopOf="@id/btnLibEventInvitationCard"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibEventModalityLoading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
