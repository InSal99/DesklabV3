            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibStatusBadge"
            app:layout_constraintEnd_toEndOf="@id/btnLibStatusBadge"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibBottomTray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Bottom Tray"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibDetailInformationSpeaker"
            app:layout_constraintTop_toTopOf="@id/btnLibDetailInformationSpeaker"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibSelectionDropdownFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Dropdown Filter"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibDetailInformationSpeaker"
            app:layout_constraintEnd_toEndOf="@id/btnLibDetailInformationSpeaker"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibSelectionChip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Chips"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibSelectionDropdownFilter"
            app:layout_constraintTop_toTopOf="@id/btnLibSelectionDropdownFilter"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibCardMultiDetailCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
