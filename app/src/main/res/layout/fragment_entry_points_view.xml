<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".core.EntryPointsView"
    android:background="?attr/colorBackgroundPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp" >

        <TextView
            android:id="@+id/tvFlowTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Flow Prototype"
            style="?attr/d3SemiBold"
            android:textColor="?attr/colorForegroundPrimary"
            android:layout_marginTop="@dimen/margin_32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.edts.components.button.Button
            android:id="@+id/btnFlow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Flow Registrasi Event - RSVP"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFlowTitle"/>

        <com.edts.components.button.Button
            android:id="@+id/btnFlow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Flow Invited Event - No RSVP"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlow1"/>

        <com.edts.components.button.Button
            android:id="@+id/btnFlow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Flow Attendance - Hybrid Event"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlow2"/>

        <com.edts.components.button.Button
            android:id="@+id/btnFlow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Flow Invited Event - Tolak Undangan"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlow3"/>

        <com.edts.components.button.Button
            android:id="@+id/btnFlow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Flow Cuti Feature Improvements"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlow4" />

        <TextView
            android:id="@+id/tvLibraryTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Component Library"
            style="?attr/d3SemiBold"
            android:textColor="?attr/colorForegroundPrimary"
            android:layout_marginTop="@dimen/margin_32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlow5" />

        <com.edts.components.button.Button
            android:id="@+id/btnLibButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Button"
            android:layout_marginTop="@dimen/margin_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLibraryTitle"
            app:layout_constraintEnd_toStartOf="@id/btnLibInfobox"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibInfobox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Infobox"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibButton"
            app:layout_constraintTop_toTopOf="@id/btnLibButton"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Footer"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibButton"
            app:layout_constraintEnd_toStartOf="@id/btnLibToast"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibToast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Toast"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibFooter"
            app:layout_constraintTop_toTopOf="@id/btnLibFooter"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibCheckbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Checkbox"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibFooter"
            app:layout_constraintEnd_toStartOf="@id/btnLibRadioButton"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Radio Button"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibCheckbox"
            app:layout_constraintTop_toTopOf="@id/btnLibCheckbox"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibInputField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Input Field"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibCheckbox"
            app:layout_constraintEnd_toStartOf="@id/btnLibOptionCard"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibOptionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Option Card"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibInputField"
            app:layout_constraintTop_toTopOf="@id/btnLibInputField"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibStatusBadge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Status Badge"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibInputField"
            app:layout_constraintEnd_toStartOf="@id/btnLibDetailInformationA"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibDetailInformationA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Detail Info A"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibStatusBadge"
            app:layout_constraintTop_toTopOf="@id/btnLibStatusBadge"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibDetailInformationSpeaker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Detail Info Speaker"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibStatusBadge"
            app:layout_constraintEnd_toEndOf="@id/btnLibStatusBadge"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibBottomTray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Bottom Tray"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibDetailInformationSpeaker"
            app:layout_constraintTop_toTopOf="@id/btnLibDetailInformationSpeaker"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibSelectionDropdownFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Selection: Dropdown Filter"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibDetailInformationSpeaker"
            app:layout_constraintEnd_toEndOf="@id/btnLibDetailInformationSpeaker"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibSelectionChip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Selection: Chip"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibSelectionDropdownFilter"
            app:layout_constraintTop_toTopOf="@id/btnLibSelectionDropdownFilter"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibCardMultiDetailCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Card: Multi Detail Card"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibSelectionDropdownFilter"
            app:layout_constraintEnd_toEndOf="@id/btnLibSelectionDropdownFilter"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibCardDetailInformationB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Card: Detail Information B"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibCardMultiDetailCard"
            app:layout_constraintTop_toTopOf="@id/btnLibCardMultiDetailCard"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibCardLeftSlot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Card: Left Slot"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibCardMultiDetailCard"
            app:layout_constraintEnd_toEndOf="@id/btnLibCardMultiDetailCard"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibBottomNavigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Bottom Navigation"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibCardLeftSlot"
            app:layout_constraintTop_toTopOf="@id/btnLibCardLeftSlot"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibBottomNavigationItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Bottom Navigation Item"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibCardLeftSlot"
            app:layout_constraintEnd_toEndOf="@id/btnLibCardLeftSlot"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Tab"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibBottomNavigationItem"
            app:layout_constraintTop_toTopOf="@id/btnLibBottomNavigationItem"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibTabItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Tab Item"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibBottomNavigationItem"
            app:layout_constraintEnd_toEndOf="@id/btnLibBottomNavigationItem"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibInputSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Input: Search"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibTabItem"
            app:layout_constraintTop_toTopOf="@id/btnLibTabItem"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibSortButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Sort Button"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibTabItem"
            app:layout_constraintEnd_toEndOf="@id/btnLibTabItem"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibEventCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Event Card"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibSortButton"
            app:layout_constraintTop_toTopOf="@id/btnLibSortButton"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibEventCardBadge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Event Card: Badge"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibSortButton"
            app:layout_constraintEnd_toEndOf="@id/btnLibSortButton"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibEventCardStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Event Card: Status"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibEventCardBadge"
            app:layout_constraintTop_toTopOf="@id/btnLibEventCardBadge"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibBadge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Badge"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibEventCardBadge"
            app:layout_constraintEnd_toEndOf="@id/btnLibEventCardBadge"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Header"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibBadge"
            app:layout_constraintTop_toTopOf="@id/btnLibBadge"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibEventInvitationCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Event Invitation Card"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibBadge"
            app:layout_constraintEnd_toEndOf="@id/btnLibBadge"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibEventModalityConfirmation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Event Modality Confirmation"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibEventInvitationCard"
            app:layout_constraintTop_toTopOf="@id/btnLibEventInvitationCard"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibEventModalityLoading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Event Modality Loading"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibEventInvitationCard"
            app:layout_constraintEnd_toEndOf="@id/btnLibEventInvitationCard"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibMyEventCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="My Event Card"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibEventModalityLoading"
            app:layout_constraintTop_toTopOf="@id/btnLibEventModalityLoading"
            app:layout_constraintBottom_toBottomOf="@id/btnLibEventModalityLoading"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibMonthlyPicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:size="SM"
            android:text="Monthly Picker"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibEventModalityLoading"
            app:layout_constraintEnd_toEndOf="@id/btnLibEventModalityLoading"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>