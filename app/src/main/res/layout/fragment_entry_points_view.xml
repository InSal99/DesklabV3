            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibSortButton"
            app:layout_constraintTop_toTopOf="@id/btnLibSortButton"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibEventCardBadge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Event Badge"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibSortButton"
            app:layout_constraintEnd_toEndOf="@id/btnLibSortButton"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibEventCardStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Event Status"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibEventCardBadge"
            app:layout_constraintTop_toTopOf="@id/btnLibEventCardBadge"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibBadge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Badge"
            android:layout_marginTop="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLibEventCardBadge"
            app:layout_constraintEnd_toEndOf="@id/btnLibEventCardBadge"/>

        <com.edts.components.button.Button
            android:id="@+id/btnLibHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            buttonCustomSize="MD"
            app:buttonType="SECONDARY"
            android:text="Header"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toEndOf="@id/btnLibBadge"
            app:layout_constraintTop_toTopOf="@id/btnLibBadge"
