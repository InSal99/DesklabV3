<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:background="?attr/colorBackgroundPrimary"
    tools:context=".core.component.SelectionChipComponentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnLibSelectionChipBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:src="@drawable/ic_chevron_left"
                app:tint="?attr/colorForegroundSecondary" />

            <TextView
                android:id="@+id/tvLibraryTitle"
                style="?attr/d3SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:text="Selection: Chip"
                android:textColor="?attr/colorForegroundPrimary" />

        </LinearLayout>

        <com.edts.components.selection.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            app:chipState="inactive"
            app:chipText="Chip Label"
            app:chipSize="small"
            app:chipBadgeText="3"
            app:chipShowIcon="true"
            app:chipShowBadge="true"
            app:chipIcon="@drawable/ic_close" />

        <com.edts.components.selection.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:chipState="inactive"
            app:chipSize="medium"
            app:chipText="Chip Label"
            app:chipShowIcon="true"
            app:chipShowBadge="false"
            app:chipIcon="@drawable/ic_close" />

        <com.edts.components.selection.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:chipState="inactive"
            app:chipText="Chip Label"
            app:chipShowIcon="false"
            app:chipShowBadge="false" />

        <com.edts.components.selection.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            app:chipState="inactive"
            app:chipText="Chip Label"
            app:chipShowIcon="false"
            app:chipShowBadge="false"
            app:chipActiveBackgroundColor="?attr/colorBackgroundUtilityCutiIntense"/>

    </LinearLayout>

</FrameLayout>