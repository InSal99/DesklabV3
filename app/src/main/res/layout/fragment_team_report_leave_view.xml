<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundPrimaryTinted"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.leave.ui.laporantim.TeamReportLeaveView">

    <com.edts.components.input.search.InputSearch
        android:id="@+id/cvSearchKaryawan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        app:inputSearchHint="Cari Karyawan"
        app:inputSearchState="rest"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cvSortBtn"/>

    <com.edts.components.sort.button.SortButton
        android:id="@+id/cvSortBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:layout_constraintStart_toEndOf="@+id/cvSearchKaryawan"
        app:layout_constraintTop_toTopOf="@+id/cvSearchKaryawan"
        app:layout_constraintBottom_toBottomOf="@+id/cvSearchKaryawan"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/ivEmptyStateLeaveList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:paddingBottom="@dimen/margin_24dp"
        android:clipToPadding="false"
        android:contentDescription="Empty State"
        android:scaleType="centerCrop"
        android:src="@drawable/empty_state_leave"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cvSearchKaryawan"
        app:layout_constraintStart_toStartOf="@id/cvSearchKaryawan"
        app:layout_constraintEnd_toEndOf="@id/cvSortBtn"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLeaveCards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_24dp"
        app:layout_constraintTop_toBottomOf="@+id/cvSearchKaryawan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_leave_card" />

</androidx.constraintlayout.widget.ConstraintLayout>