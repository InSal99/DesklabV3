<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="@dimen/margin_16dp"
    android:background="?attr/colorBackgroundPrimary" >

    <LinearLayout
        android:id="@+id/cvComponentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnLibEventModalityLoadingBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="center"
            android:src="@drawable/ic_chevron_left"
            app:tint="?attr/colorForegroundSecondary" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLibraryTitle"
            style="?attr/d3SemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12dp"
            android:text="Event Modality Loading"
            android:textColor="?attr/colorForegroundPrimary" />

    </LinearLayout>

    <com.edts.components.button.Button
        android:id="@+id/btnEventModalityLoading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Click to Show Loading Pop-Up"
        app:buttonCustomSize="MD"
        app:buttonType="SECONDARY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>