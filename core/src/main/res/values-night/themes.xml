<style name="NoActionBar" parent="Theme.Desklab.Kit">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>

<style name="DialogTheme" parent="NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowTranslucentStatus">false</item>
</style>

<style name="WhiteBar" parent="Theme.Desklab.Kit">
    <item name="colorPrimary">@android:color/white</item>
    <item name="android:statusBarColor">@color/colorNeutralWhite</item>
</style>

