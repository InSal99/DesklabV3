    <!-- kerja khusus -->
    <item name="colorStrokeUtilityKerjaKhususSubtle">@color/colorBrandSecondary10</item>
    <item name="colorStrokeUtilityKerjaKhususIntense">@color/colorBrandSecondary30</item>

    <!-- ulang tahun -->
    <item name="colorStrokeUtilityUlangTahunSubtle">@color/colorGreen10</item>
    <item name="colorStrokeUtilityUlangTahunIntense">@color/colorGreen40</item>

    <!-- event -->
    <item name="colorStrokeUtilityEventSubtle">@color/colorOrange10</item>
    <item name="colorStrokeUtilityEventIntense">@color/colorOrange40</item>

    <!-- Shadow Colors -->
    <!-- Neutral -->
    <item name="colorShadowNeutralKey">@color/colorNeutralGrayDarkA10</item>
    <item name="colorShadowNeutralAmbient">@color/colorNeutralGrayDarkA5</item>

    <!-- Tinted -->
    <item name="colorShadowTintedKey">@color/colorBrandPrimaryA20</item>
    <item name="colorShadowTintedAmbient">@color/colorBrandPrimaryA10</item>

    <!-- Illustration Colors -->
    <item name="colorIllustrationBg">@color/colorBrandPrimaryA5</item>
    <item name="colorIllustrationIcon">@color/colorBrandPrimary50</item>
    <item name="colorIllustrationRippleIntense">@color/colorBrandPrimaryA20</item>
    <item name="colorIllustrationRippleSubtle">@color/colorBrandPrimaryA2</item>

    <!-- Display -->
    <item name="d1SemiBold">@style/TextSemiBold.Display1</item>
    <item name="d2SemiBold">@style/TextSemiBold.Display2</item>
    <item name="d3SemiBold">@style/TextSemiBold.Display3</item>
    <item name="d3Bold">@style/TextBold.Display3</item>

    <!-- Headings -->
    <item name="h1SemiBold">@style/TextSemiBold.Heading1</item>
    <item name="h1Bold">@style/TextBold.Heading1</item>
    <item name="h2SemiBold">@style/TextSemiBold.Heading2</item>
