    <!-- Utility Stroke Colors -->
    <!-- libur -->
    <item name="colorStrokeUtilityLiburSubtle">@color/colorRed10</item>
    <item name="colorStrokeUtilityLiburIntense">@color/colorRed30</item>

    <!-- cuti -->
    <item name="colorStrokeUtilityCutiSubtle">@color/colorBrandPrimary10</item>
