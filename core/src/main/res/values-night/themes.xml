    <item name="p1Medium">@style/TextMedium.Paragraph1</item>
    <item name="p1Regular">@style/TextRegular.Paragraph1</item>
    <item name="p2SemiBold">@style/TextSemiBold.Paragraph2</item>
    <item name="p2Medium">@style/TextMedium.Paragraph2</item>
    <item name="p2Regular">@style/TextRegular.Paragraph2</item>

    <!-- Labels -->
    <item name="l1Bold">@style/TextBold.Label1</item>
    <item name="l1Medium">@style/TextMedium.Label1</item>
    <item name="l1Regular">@style/TextRegular.Label1</item>
    <item name="l2SemiBold">@style/TextSemiBold.Label2</item>
    <item name="l2Medium">@style/TextMedium.Label2</item>
    <item name="l2Regular">@style/TextRegular.Label2</item>
