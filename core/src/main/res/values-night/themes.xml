<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.Desklab.Kit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorBrandPrimary30</item>
    <item name="colorPrimaryVariant">@color/colorBrandPrimary50</item>
    <item name="colorOnPrimary">@color/white</item>

    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/colorBrandSecondary30</item>
    <item name="colorSecondaryVariant">@color/colorBrandSecondary50</item>
    <item name="colorOnSecondary">@color/colorBlack70</item>

    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/colorNeutralWhite</item>
    <item name="android:windowLightStatusBar">true</item>

    <!-- Customize your theme here. -->
    <item name="android:fontFamily">@font/inter_medium</item>
    <item name="fontFamily">@font/inter_medium</item>

    <!-- Calendar -->
    <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
    <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    <item name="android:windowFullscreen">false</item>
    <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>

    <!-- Modality Dialog -->
    <item name="materialAlertDialogTheme">@style/Theme.DesklabV3.Alert.Dialog</item>

    <!-- Background Colors -->
    <item name="colorBackgroundPrimary">@color/colorNeutralWhite</item>
    <item name="colorBackgroundPrimaryTinted">@color/colorGrayBlue10</item>
    <item name="colorBackgroundPrimaryInverse">@color/colorNeutralBlack</item>
    <item name="colorBackgroundSecondary">@color/colorNeutralGrayLight10</item>
    <item name="colorBackgroundSecondaryTinted">@color/colorGrayBlue20</item>
    <item name="colorBackgroundTertiary">@color/colorNeutralGrayLight20</item>
    <item name="colorBackgroundOverlay">@color/colorNeutralGrayDarkA50</item>
    <item name="colorBackgroundDisabled">@color/colorNeutralGrayDarkA5</item>

    <!-- Accent Background Colors -->
    <item name="colorBackgroundAccentPrimarySubtle">@color/colorBrandPrimary10</item>
    <item name="colorBackgroundAccentPrimaryIntense">@color/colorBrandPrimary30</item>
    <item name="colorBackgroundAccentSecondary">@color/colorBrandSecondary30</item>
    <item name="colorBackgroundAccentDisabled">@color/colorBrandPrimaryA5</item>

    <!-- Modifier Background Colors -->
    <item name="colorBackgroundModifierCardElevated">@color/colorModifierElevated</item>
    <item name="colorBackgroundModifierCardElevatedInverse">@color/colorNeutralGrayLightA5</item>
    <item name="colorBackgroundModifierCardSurface">@color/colorModifierSurface</item>
    <item name="colorBackgroundModifierOnHover">@color/colorNeutralGrayDarkA2</item>
    <item name="colorBackgroundModifierOnPress">@color/colorNeutralGrayDarkA5</item>
    <item name="colorBackgroundModifierOnPressIntense">@color/colorNeutralGrayDarkA12</item>

    <!-- Info Background Colors -->
    <item name="colorBackgroundInfoSubtle">@color/colorBlue10</item>
    <item name="colorBackgroundInfoIntense">@color/colorBlue50</item>

    <!-- Success Background Colors -->
    <item name="colorBackgroundSuccessSubtle">@color/colorGreen10</item>
    <item name="colorBackgroundSuccessIntense">@color/colorGreen50</item>

    <!-- Warning Background Colors -->
    <item name="colorBackgroundWarningSubtle">@color/colorOrange10</item>
    <item name="colorBackgroundWarningIntense">@color/colorOrange40</item>

    <!-- Attention Background Colors -->
    <item name="colorBackgroundAttentionSubtle">@color/colorRed10</item>
    <item name="colorBackgroundAttentionIntense">@color/colorRed40</item>

    <!-- Utility Background Colors -->
    <!-- libur -->
    <item name="colorBackgroundUtilityLiburSubtle">@color/colorRed10</item>
    <item name="colorBackgroundUtilityLiburIntense">@color/colorRed30</item>

    <!-- cuti -->
    <item name="colorBackgroundUtilityCutiSubtle">@color/colorBrandPrimary10</item>
    <item name="colorBackgroundUtilityCutiIntense">@color/colorBrandPrimary30</item>

    <!-- kerja khusus -->
    <item name="colorBackgroundUtilityKerjaKhususSubtle">@color/colorBrandSecondary10</item>
    <item name="colorBackgroundUtilityKerjaKhususIntense">@color/colorBrandSecondary30</item>

    <!-- ulang tahun -->
    <item name="colorBackgroundUtilityUlangTahunSubtle">@color/colorGreen10</item>
    <item name="colorBackgroundUtilityUlangTahunIntense">@color/colorGreen40</item>

    <!-- event -->
    <item name="colorBackgroundUtilityEventSubtle">@color/colorOrange10</item>
    <item name="colorBackgroundUtilityEventIntense">@color/colorOrange40</item>

    <!-- Basic Foreground Colors -->
    <item name="colorForegroundPrimary">@color/colorNeutralBlack</item>
    <item name="colorForegroundPrimaryInverse">@color/colorNeutralWhite</item>
    <item name="colorForegroundSecondary">@color/colorNeutralGrayLight60</item>
    <item name="colorForegroundTertiary">@color/colorNeutralGrayLight50</item>
    <item name="colorForegroundPlaceholder">@color/colorNeutralGrayLight40</item>
    <item name="colorForegroundDisabled">@color/colorNeutralGrayDarkA20</item>
    <item name="colorForegroundOverlay">?attr/colorBackgroundOverlay</item>
    <item name="colorForegroundWhite">@color/colorNeutralWhite</item>
    <item name="colorForegroundBlack">@color/colorNeutralBlack</item>

    <!-- Modifier Foreground Colors -->
    <item name="colorForegroundModifierCardElevated">?attr/colorBackgroundModifierCardElevated
    </item>
    <item name="colorForegroundModifierCardSurface">?attr/colorBackgroundModifierCardSurface
    </item>

    <!-- Accent Foreground Colors -->
    <item name="colorForegroundAccentPrimarySubtle">@color/colorBrandPrimary10</item>
    <item name="colorForegroundAccentPrimaryIntense">@color/colorBrandPrimary30</item>

    <!-- Info Foreground Colors -->
    <item name="colorForegroundInfoSubtle">@color/colorBlue10</item>
    <item name="colorForegroundInfoIntense">@color/colorBlue50</item>

    <!-- Success Foreground Colors -->
    <item name="colorForegroundSuccessSubtle">@color/colorGreen10</item>
    <item name="colorForegroundSuccessIntense">@color/colorGreen50</item>

    <!-- Warning Foreground Colors -->
    <item name="colorForegroundWarningSubtle">@color/colorOrange10</item>
    <item name="colorForegroundWarningIntense">@color/colorOrange50</item>

    <!-- Attention Foreground Colors -->
    <item name="colorForegroundAttentionSubtle">@color/colorRed10</item>
    <item name="colorForegroundAttentionIntense">@color/colorRed40</item>

    <!-- Utility Foreground Colors -->
    <!-- libur -->
    <item name="colorForegroundUtilityLiburSubtle">@color/colorRed10</item>
    <item name="colorForegroundUtilityLiburIntense">@color/colorRed30</item>

    <!-- cuti -->
    <item name="colorForegroundUtilityCutiSubtle">@color/colorBrandPrimary10</item>
    <item name="colorForegroundUtilityCutiIntense">@color/colorBrandPrimary30</item>

    <!-- kerja-khusus -->
    <item name="colorForegroundUtilityKerjaKhususSubtle">@color/colorBrandSecondary10</item>
    <item name="colorForegroundUtilityKerjaKhususIntense">@color/colorBrandSecondary30</item>

    <!-- ulang-tahun -->
    <item name="colorForegroundUtilityUlangTahunSubtle">@color/colorGreen10</item>
    <item name="colorForegroundUtilityUlangTahunIntense">@color/colorGreen40</item>

