<!-- Action bar style -->
<style name="ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
    <item name="android:background">@drawable/bg_bottom_stroke</item>
    <item name="android:titleTextStyle">@style/ActionBarText</item>
