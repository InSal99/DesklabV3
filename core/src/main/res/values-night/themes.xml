    <item name="colorStrokeSubtle">@color/colorNeutralGrayLight30</item>
    <item name="colorStrokeInteractive">@color/colorNeutralGrayLightA20</item>
    <item name="colorStrokeIntense">@color/colorNeutralGrayLight40</item>
    <item name="colorStrokeFocus">@color/colorBrandPrimary50</item>
    <item name="colorStrokeAccent">@color/colorBrandPrimary30</item>
    <item name="colorStrokeDisabled">@color/colorNeutralGrayDarkA12</item>
    <item name="colorStrokeCutout">?attr/colorBackgroundPrimary</item>

    <!-- Semantic Stroke Colors -->
    <!-- Info -->
    <item name="colorStrokeInfoSubtle">@color/colorBlue10</item>
    <item name="colorStrokeInfoIntense">@color/colorBlue50</item>

    <!-- Success -->
    <item name="colorStrokeSuccessSubtle">@color/colorGreen10</item>
    <item name="colorStrokeSuccessIntense">@color/colorGreen50</item>

    <!-- Warning -->
    <item name="colorStrokeWarningSubtle">@color/colorOrange10</item>
