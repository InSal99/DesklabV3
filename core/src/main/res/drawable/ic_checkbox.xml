<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked & Enabled -->
    <item android:state_checked="true" android:state_enabled="true">
        <layer-list>
            <!-- Outer square -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorOpacityWhite20"/>
                    <solid
                        android:color="@color/colorPrimary30"/>
                    <size
                        android:width="16dp"
                        android:height="16dp"/>
                    <corners
                        android:radius="@dimen/radius_6dp"/>
                </shape>
            </item>
            <!-- Inner checkmark -->
            <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
                <rotate android:fromDegrees="45" android:pivotX="50%" android:pivotY="50%">
                    <shape android:shape="line">
                        <stroke
                            android:width="2dp"
                            android:color="@color/colorFFF"/>
                        <size
                            android:width="6dp"
                            android:height="10dp"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

    <!-- Checked & Disabled -->
    <item android:state_checked="true" android:state_enabled="false">
        <layer-list>
            <!-- Outer square -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorNeutral30"/>
                    <solid
                        android:color="@color/color000Opacity5"/>
                    <size
                        android:width="16dp"
                        android:height="16dp"/>
                    <corners
                        android:radius="@dimen/radius_6dp"/>
                </shape>
            </item>
            <!-- Inner checkmark -->
            <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
                <rotate android:fromDegrees="45" android:pivotX="50%" android:pivotY="50%">
                    <shape android:shape="line">
                        <stroke
                            android:width="2dp"
                            android:color="@color/color000Opacity20"/>
                        <size
                            android:width="6dp"
                            android:height="10dp"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

    <!-- Unchecked & Enabled -->
    <item android:state_checked="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/colorNeutral30"/>
            <solid
                android:color="@color/colorFFF"/>
            <size
                android:width="16dp"
                android:height="16dp"/>
            <corners
                android:radius="@dimen/radius_6dp"/>
        </shape>
    </item>

    <!-- Unchecked & Disabled -->
    <item android:state_checked="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/colorNeutral30"/>
            <solid
                android:color="@color/color000Opacity5"/>
            <size
                android:width="16dp"
                android:height="16dp"/>
            <corners
                android:radius="@dimen/radius_6dp"/>
        </shape>
    </item>
</selector>