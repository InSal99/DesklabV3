<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16dp"
    android:outlineAmbientShadowColor="?attr/colorForegroundPrimary"
    android:outlineSpotShadowColor="?attr/colorForegroundPrimary"
    app:cardCornerRadius="@dimen/radius_16dp"
    app:cardElevation="@dimen/margin_4dp"
    app:strokeColor="?attr/colorStrokeSubtle"
    app:strokeWidth="@dimen/stroke_weight_1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/margin_16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvModalityTitle"
            style="@style/TextBold.Heading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Konfirmasi Undangan"
            android:textColor="?attr/colorForegroundPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvModalityDescription"
            style="@style/TextRegular.Paragraph1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Apakah kamu yakin terima undangan dan akan menghadiri event ini nanti?"
            android:textColor="?attr/colorForegroundSecondary"
            app:layout_constraintStart_toStartOf="@+id/tvModalityTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvModalityTitle" />

        <LinearLayout
            android:id="@+id/btnModalityContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvModalityDescription">

            <com.edts.components.button.Button
                android:id="@+id/btnModalityClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_4dp"
                android:layout_weight="1"
                app:customButtonSize="MD"
                app:customButtonType="SECONDARY"
                app:isButtonDestructive="false"
                app:isButtonDisabled="false"
                app:label="Tutup" />

            <com.edts.components.button.Button
                android:id="@+id/btnModalityConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4dp"
                android:layout_weight="1"
                app:customButtonSize="MD"
                app:customButtonType="PRIMARY"
                app:isButtonDestructive="false"
                app:isButtonDisabled="false"
                app:label="Ya, Lanjutkan" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>