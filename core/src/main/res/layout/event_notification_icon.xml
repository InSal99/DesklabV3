<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
    app:strokeColor="?attr/colorStrokeSubtle"
    android:backgroundTint="?attr/colorBackgroundTertiary"
    app:strokeWidth="@dimen/stroke_weight_1dp"
    app:cardElevation="@dimen/margin_0dp">

    <ImageView
        android:id="@+id/ivNotificationIcon"
        android:layout_width="@dimen/margin_12dp"
        android:layout_height="@dimen/margin_12dp"
        android:layout_margin="@dimen/margin_4dp"
        android:contentDescription="Notification Icon"
        android:src="@drawable/kit_ic_notification_event"
        app:tint="?attr/colorForegroundSecondary" />
</com.google.android.material.card.MaterialCardView>