<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_20dp"
    android:clipChildren="false"
    android:clipToOutline="false"
    android:clipToPadding="false"
    app:cardCornerRadius="@dimen/radius_16dp"
    app:strokeColor="?attr/colorStrokeSubtle"
    app:strokeWidth="@dimen/stroke_weight_1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToOutline="false"
        android:clipToPadding="false"
        android:padding="@dimen/margin_16dp">

<!--        <ImageView-->
<!--            android:id="@+id/ivCircularProgress"-->
<!--            android:layout_width="@dimen/margin_48dp"-->
<!--            android:layout_height="@dimen/margin_48dp"-->
<!--            android:layout_margin="@dimen/margin_4dp"-->
<!--            android:contentDescription="Notification Icon"-->
<!--            android:src="@drawable/ic_circular_progress"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"/>-->

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/ivCircularProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorColor="?attr/colorPrimary"
            app:trackColor="?attr/colorTertiary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvModalTitle"
            style="@style/TextBold.Heading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="Tunggu sebentar ..."
            android:textColor="?attr/colorForegroundPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCircularProgress"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>