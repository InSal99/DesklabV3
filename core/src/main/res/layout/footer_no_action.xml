<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/margin_12dp"
    android:paddingVertical="@dimen/margin_8dp">

    <TextView
        android:id="@+id/tvFooterNoActionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight= "1"
        android:text="Title"
        android:maxLines="1"
        android:ellipsize="end"
        style="?attr/l3Regular"
        android:textColor="?attr/colorForegroundSecondary"
        android:layout_marginEnd="@dimen/margin_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bFooterNoActionStatus"/>

    <TextView
        android:id="@+id/tvFooterNoActionDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight= "1"
        android:text="Description"
        android:maxLines="1"
        android:ellipsize="end"
        style="?attr/l2Medium"
        android:textColor="?attr/colorForegroundPrimary"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        app:layout_constraintTop_toBottomOf="@id/tvFooterNoActionTitle"
        app:layout_constraintBottom_toTopOf="@id/tvFooterNoActionDescription"
        app:layout_constraintEnd_toStartOf="@id/bFooterNoActionStatus"
        app:layout_constraintStart_toStartOf="@id/tvFooterNoActionTitle"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.edts.components.status.badge.StatusBadge
        android:id="@+id/bFooterNoActionStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:statusBadgeText="Presented"
        android:maxLines="1"
        app:statusBadgeType="approved"
        app:layout_constraintTop_toTopOf="@id/tvFooterNoActionTitle"
        app:layout_constraintTop_toBottomOf="@id/tvFooterNoActionTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvFooterNoActionDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>