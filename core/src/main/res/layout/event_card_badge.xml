<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/EventCardBadge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radius_999dp"
    android:backgroundTint="@color/colorOrange50"
    app:strokeColor="@android:color/transparent"
    app:cardElevation="@dimen/margin_0dp">

    <TextView
        style="@style/TextSemiBold.Paragraph2"
        android:id="@+id/tvEvenCardBadgeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_8dp"
        android:paddingVertical="@dimen/margin_2dp"
        android:text="@string/event_card_badge_label"
        android:textColor="@color/colorFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</com.google.android.material.card.MaterialCardView>