<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="48dp"
    android:orientation="horizontal"
    app:strokeWidth="1dp"
    app:cardCornerRadius="@dimen/radius_12dp"
    app:strokeColor="?attr/colorStrokeSubtle"
    app:cardElevation="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_12dp"
        android:layout_marginVertical="@dimen/margin_8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOptionTitle"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            style="?attr/l2Regular"
            android:text="@string/option_card_title"
            android:maxLines="1"
            android:gravity="fill_vertical"
            android:textColor="?attr/colorForegroundPrimary"
            android:paddingHorizontal="@dimen/margin_4dp" />

        <ImageView
            android:id="@+id/ivOptionAction"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/placeholder"
            app:tint="?attr/colorForegroundTertiary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>