<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="@dimen/margin_10dp"
        android:id="@+id/ivBottomNavigation"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/bottom_navigation_iv_content_description"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvBottomNavigation"
        app:tint="?attr/colorForegroundAccentPrimaryIntense" />

    <TextView
        android:id="@+id/tvBottomNavigation"
        style="?attr/l3Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/bottom_navigation_text"
        android:textColor="?attr/colorForegroundAccentPrimaryIntense"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBottomNavigation"
        android:layout_marginBottom="@dimen/margin_10dp" />

    <com.edts.components.badge.Badge
        android:id="@+id/cvBadgeBottomNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintStart_toStartOf="@+id/ivBottomNavigation"
        app:layout_constraintBottom_toBottomOf="@+id/ivBottomNavigation"
        app:showText="false"
        app:badgeStrokeColor="?attr/colorStrokeCutout"
        app:badgeBackgroundTint="?attr/colorBackgroundAttentionIntense"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/bottomNavigationIndicator"
        android:layout_width="0dp"
        android:layout_height="@dimen/stroke_weight_2dp"
        android:background="?attr/colorStrokeAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="@id/bottomNavigation" />
</androidx.constraintlayout.widget.ConstraintLayout>