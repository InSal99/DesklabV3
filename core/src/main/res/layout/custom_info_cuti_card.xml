<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="152dp"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToOutline="false"
    android:clipToPadding="false"
    app:cardCornerRadius="@dimen/radius_8dp"
    android:outlineAmbientShadowColor="@color/colorBlack30"
    android:outlineSpotShadowColor="@color/colorBlack30"
    app:cardElevation="0dp"
    app:strokeColor="?attr/colorStrokeSubtle"
    app:strokeWidth="@dimen/stroke_weight_1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToOutline="false"
        android:clipToPadding="false"
        android:padding="@dimen/margin_12dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInfoCutiTitle"
            style="@style/TextMedium.Label4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuti Tahun Ini"
            android:textColor="?attr/colorForegroundPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInfoSaldoCuti"
            style="@style/TextBold.Heading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:text="3 hari"
            android:textColor="?attr/colorForegroundPrimary"
            app:layout_constraintStart_toStartOf="@id/tvInfoCutiTitle"
            app:layout_constraintTop_toBottomOf="@id/tvInfoCutiTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInfoExpired"
            style="@style/TextRegular.Label4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2dp"
            android:text="Kadaluwarsa: 01/08/2026"
            android:textColor="?attr/colorForegroundTertiary"
            app:layout_constraintStart_toStartOf="@id/tvInfoSaldoCuti"
            app:layout_constraintTop_toBottomOf="@id/tvInfoSaldoCuti" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInfoUsed"
            style="@style/TextRegular.Label4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2dp"
            android:text="Cuti Terpakai: 1 Hari"
            android:textColor="?attr/colorForegroundTertiary"
            app:layout_constraintStart_toStartOf="@id/tvInfoExpired"
            app:layout_constraintTop_toBottomOf="@id/tvInfoExpired" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>