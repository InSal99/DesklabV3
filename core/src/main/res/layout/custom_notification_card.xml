<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineAmbientShadowColor="?attr/colorForegroundPrimary"
    android:outlineSpotShadowColor="?attr/colorForegroundPrimary"
    app:cardCornerRadius="@dimen/radius_12dp"
    app:cardElevation="@dimen/margin_2dp"
    app:strokeColor="?attr/colorStrokeSubtle"
    app:strokeWidth="@dimen/stroke_weight_1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToOutline="false"
        android:clipToPadding="false"
        android:padding="@dimen/margin_12dp">

        <com.edts.components.notification.CustomNotificationIcon
            android:id="@+id/notificationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:notificationIcon="@drawable/ic_notification_event" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNotificationType"
            style="@style/TextMedium.Label4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_6dp"
            android:text="General Event"
            android:textAllCaps="true"
            android:textColor="?attr/colorForegroundTertiary"
            app:layout_constraintBottom_toBottomOf="@+id/notificationIcon"
            app:layout_constraintStart_toEndOf="@+id/notificationIcon"
            app:layout_constraintTop_toTopOf="@+id/notificationIcon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNotificationTitle"
            style="@style/TextMedium.Label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="EDTS Town-Hall 2025: Power of Change"
            android:textColor="?attr/colorForegroundPrimary"
            app:layout_constraintStart_toStartOf="@+id/notificationIcon"
            app:layout_constraintTop_toBottomOf="@+id/notificationIcon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNotificationDescription"
            style="@style/TextRegular.Paragraph2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            android:text="Anda diundang pada Rabu, 23 Juli 2025, pukul 15:00 â€“ 17:00 WIB. Segera konfirmasi kehadiran Anda."
            android:textColor="?attr/colorForegroundSecondary"
            app:layout_constraintStart_toStartOf="@+id/tvNotificationTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvNotificationTitle" />

        <com.edts.components.button.Button
            android:id="@+id/btnNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_weight="1"
            app:size="MD"
            app:type="PRIMARY"
            app:isButtonDestructive="false"
            app:isButtonDisabled="false"
            android:text="Terima Undangan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNotificationDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>