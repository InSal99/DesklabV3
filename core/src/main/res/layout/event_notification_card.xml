<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/margin_12dp">

    <com.edts.components.notification.NotificationIcon
        android:id="@+id/notificationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:notificationIcon="@drawable/ic_notification_event"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvNotificationType"
        style="?attr/l4Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_6dp"
        android:text="General Event"
        android:textAllCaps="true"
        android:textColor="?attr/colorForegroundTertiary"
        app:layout_constraintBottom_toBottomOf="@+id/notificationIcon"
        app:layout_constraintStart_toEndOf="@+id/notificationIcon"
        app:layout_constraintTop_toTopOf="@+id/notificationIcon"/>

    <com.edts.components.badge.Badge
        android:id="@+id/notificationBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:showText="false"
        app:badgeBackgroundTint="?attr/colorForegroundAttentionIntense"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/notificationIcon"
        app:layout_constraintTop_toTopOf="@+id/notificationIcon"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvNotificationTitle"
        style="?attr/l2SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="EDTS Town-Hall 2025: Power of Change"
        android:textColor="?attr/colorForegroundPrimary"
        app:layout_constraintStart_toStartOf="@+id/notificationIcon"
        app:layout_constraintTop_toBottomOf="@+id/notificationIcon"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvNotificationDescription"
        style="?attr/p2Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:text="Anda diundang pada Rabu, 23 Juli 2025, pukul 15:00 â€“ 17:00 WIB. Segera konfirmasi kehadiran Anda."
        android:textColor="?attr/colorForegroundSecondary"
        app:layout_constraintStart_toStartOf="@+id/tvNotificationTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvNotificationTitle"/>

    <com.edts.components.button.Button
        android:id="@+id/btnNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_weight="1"
        app:buttonCustomSize="MD"
        app:buttonType="PRIMARY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNotificationDescription"
        tools:text="Positive Button"/>

    <com.edts.components.button.Button
        android:id="@+id/btnNegativeNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_weight="1"
        buttonCustomSize="MD"
        app:buttonType="SECONDARY"
        app:layout_constraintEnd_toStartOf="@id/btnNotification"
        app:layout_constraintBottom_toBottomOf="@id/btnNotification"
        app:layout_constraintTop_toTopOf="@id/btnNotification"
        tools:text="Negative Button"/>
</androidx.constraintlayout.widget.ConstraintLayout>