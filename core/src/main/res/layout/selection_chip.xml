<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radius_999dp"
    android:backgroundTint="?attr/colorBackgroundModifierCardElevated"
    app:cardBackgroundColor="?attr/colorBackgroundPrimary"
    app:strokeColor="?attr/colorStrokeSubtle"
    app:rippleColor="@android:color/transparent"
    app:strokeWidth="@dimen/stroke_weight_1dp"
    app:cardElevation="@dimen/margin_0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_6dp"
        android:paddingVertical="@dimen/margin_4dp"
        android:gravity="center">

        <TextView
            style="?attr/l3Medium"
            android:id="@+id/tvChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="label"
            android:textColor="?attr/colorForegroundPrimary" />

        <com.edts.components.badge.Badge
            android:id="@+id/cvBadgeChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:badgeText="5"
            android:layout_marginStart="@dimen/margin_2dp"
            app:badgeStrokeColor="@android:color/transparent"
            app:badgeBackgroundTint="?attr/colorBackgroundInfoSubtle"
            app:badgeTextColor="?attr/colorForegroundInfoIntense"
            app:showText="true"/>

        <ImageView
            android:id="@+id/ivChip"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="@dimen/margin_2dp"
            android:contentDescription="Chip Action"
            android:src="@drawable/placeholder"
            app:layout_constraintDimensionRatio="1:1"
            app:tint="?attr/colorForegroundSecondary"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>