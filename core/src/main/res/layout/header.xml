<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="0dp"
    app:cardCornerRadius="@dimen/radius_0dp"
    app:strokeColor="@android:color/transparent"
    app:cardElevation="2dp"
    app:rippleColor="@android:color/transparent"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardBackgroundColor="@android:color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wrapperTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingHorizontal="@dimen/margin_16dp"
            android:paddingTop="@dimen/margin_12dp"
            android:paddingBottom="@dimen/margin_12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivLeftBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Back Button"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_chevron_left"
                app:layout_constraintBottom_toBottomOf="@+id/wrapperHeader"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/wrapperHeader"
                app:tint="?attr/colorForegroundSecondary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wrapperHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:minHeight="34dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivRightBtn"
                app:layout_constraintStart_toEndOf="@+id/ivLeftBtn"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvSectionTitle"
                    style="?attr/h1SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="This is Page Title"
                    android:textColor="?attr/colorForegroundPrimary"
                    app:layout_constraintBottom_toTopOf="@+id/tvSectionSubtitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvSectionSubtitle"
                    style="?attr/l3Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="This is Page Title"
                    android:textColor="?attr/colorForegroundSecondary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSectionTitle" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivRightBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Support Action"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                app:layout_constraintBottom_toBottomOf="@id/wrapperHeader"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/wrapperHeader"
                app:tint="?attr/colorForegroundSecondary" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.edts.components.tab.Tab
            android:id="@+id/cvTabEventList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            app:initialSelectedPosition="1">
            <com.edts.components.tab.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabItemBadgeText="3"
                app:tabItemShowBadge="true"
                app:tabItemState="active"
                app:tabItemText="Daftar Event"/>

            <com.edts.components.tab.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabItemBadgeText="!"
                app:tabItemShowBadge="true"
                app:tabItemState="inactive"
                app:tabItemText="Event Saya"/>

            <com.edts.components.tab.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabItemBadgeText="!"
                app:tabItemShowBadge="true"
                app:tabItemState="inactive"
                app:tabItemText="Undangan"/>
        </com.edts.components.tab.Tab>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>