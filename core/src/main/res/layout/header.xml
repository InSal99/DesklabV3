<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_16dp"
    android:paddingTop="57dp"
    android:paddingBottom="@dimen/margin_12dp"
    android:background="@android:color/transparent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/ivLeftBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Back Button"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_chevron_left"
        app:tint="?attr/colorForegroundSecondary"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wrapperHeader"
        app:layout_constraintBottom_toBottomOf="@+id/wrapperHeader" />

    <LinearLayout
        android:id="@+id/wrapperHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivLeftBtn"
        app:layout_constraintEnd_toStartOf="@+id/ivRightBtn">

        <TextView
            android:id="@+id/tvSectionTitle"
            style="?attr/h1SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="This is Page Title"
            android:textColor="?attr/colorForegroundPrimary"/>

        <TextView
            android:id="@+id/tvSectionSubtitle"
            style="?attr/l3Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="This is Page Title"
            android:textColor="?attr/colorForegroundSecondary"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivRightBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Support Action"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        app:tint="?attr/colorForegroundSecondary"
        app:layout_constraintBottom_toBottomOf="@id/wrapperHeader"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wrapperHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>