    <style name="SplashTheme" parent="NoActionBar">
        <item name="android:windowBackground">@drawable/app_launch</item>
    </style>

    <style name="HomeTheme" parent="NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary30</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Action bar style -->
    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/bg_bottom_stroke</item>
        <item name="android:titleTextStyle">@style/ActionBarText</item>
        <item name="android:textColor">@color/colorNeutral70</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@color/colorBlack50</item>
    </style>

    <style name="ActionBarText">
        <item name="android:textColor">@color/colorBlack70</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <!-- Search view style -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Bottom sheet style -->
    <style name="BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <!-- Rating bar style -->
    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <!-- Modality Dialog -->
    <style name="Theme.App.Dialog.Confirmation" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/Style.App.Dialog.Confirmation</item>
    </style>

    <style name="Style.App.Dialog.Confirmation" parent="MaterialAlertDialog.MaterialComponents">
        <item name="backgroundTint">?attr/colorBackgroundPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Dialog.Custom</item>
    </style>

    <style name="ShapeAppearance.App.Dialog.Custom" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Circular ImageView -->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


