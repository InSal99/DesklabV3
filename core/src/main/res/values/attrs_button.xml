<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Button">
        <attr name="buttonType" format="enum">
            <enum name="PRIMARY" value="0" />
            <enum name="SECONDARY" value="1" />
        </attr>
        <attr name="buttonSize" format="enum">
            <enum name="XS" value="0" />
            <enum name="SM" value="1" />
            <enum name="MD" value="2" />
            <enum name="LG" value="3" />
        </attr>
        <attr name="buttonState" format="enum">
            <enum name="REST" value="0" />
            <enum name="ON_PRESS" value="1" />
            <enum name="ON_FOCUS" value="2" />
        </attr>
        <attr name="isButtonDisabled" format="boolean" />
        <attr name="isButtonDestructive" format="boolean" />
        <attr name="android:text" />
        <attr name="android:enabled" />
        <attr name="android:icon" />
        <attr name="icon" format="reference" />
        <attr name="iconPlacement" format="enum">
            <enum name="LEFT" value="0" />
            <enum name="RIGHT" value="1" />
        </attr>
        <attr name="iconSize" format="dimension" />
        <attr name="iconTint" format="color" />
        <attr name="iconPadding" format="dimension" />
    </declare-styleable>
</resources>