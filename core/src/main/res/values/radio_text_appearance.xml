    <style name="RadioTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/color000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="RadioTextAppearance.Normal" parent="RadioTextAppearance">
        <item name="android:textColor">@color/color000</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="RadioTextAppearance.Selected" parent="RadioTextAppearance">
        <item name="android:textColor">@color/color000</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="RadioTextAppearance.Disabled" parent="RadioTextAppearance">
        <item name="android:textColor">@color/colorNeutral30</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="RadioTextAppearance.DisabledSelected" parent="RadioTextAppearance">
        <item name="android:textColor">@color/colorNeutral30</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>
